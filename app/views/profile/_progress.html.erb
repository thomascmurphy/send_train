<% if @workout.present? && @line_progress.present? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @workout.label %></h3>
    </div>
    <div class="panel-body">
      <div class="build_many_lines"
           data-line-data='<%= @line_progress %>'
           <% if @climb_data.present? %>data-first-line-data='<%= @climb_data %>'<% end %>
           data-chart-title="<%= @workout.label %> Progress">
      </div>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <% @date_strings.each do |date| %>
          <th><%= date %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @table_progress.each do |progress| %>
        <tr>
          <td><%= progress[:title] %></td>
          <% @date_strings.each do |date| %>
            <td>
              <% if progress[:values].has_key?(date) %>
                <%= progress[:values][date] %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row">
    <div class="col-xs-10">
      <div class="well">
        Select a workout to view your progress.
      </div>
    </div>
  </div>
<% end %>
