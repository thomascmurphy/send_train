<%= form_for(@item_share, remote: true) do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Share <%= @item_share.smart_item_type %></h3>
      </div>
      <div class="modal-body">
        <div class="errors alert alert-danger hidden"></div>
        <p>You can share your workouts with other users, allowing them to easily copy your items and learn from your genius!</p>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label "Email of User" %><br>
              <input type="text" name="email" class="form-control"/>
              <%= f.hidden_field :item_type %>
              <%= f.hidden_field :item_id %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group">
              <%= f.label :notes %><br>
              <%= f.text_area :notes, {placeholder:"Just something to describe the workout.", class: "form-control", size: "60x3"} %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <input type="submit" class="btn btn-primary" value="Share">
      </div>
    </div>
  </div>
<% end %>
