<div class="row">
  <div class="col-xs-6">
    <h1>Articles</h1>
  </div>
  <div class="col-xs-6 text-right">
    <% if current_user.is_contributor? %>
      <%= link_to raw("<span class='glyphicon glyphicon-plus'></span> Create Article"), new_article_path, class: "btn btn-success btn-lg margin_top" %>
    <% end %>
  </div>
</div>
<div class="article_list margin_top">
  <%= render "index" %>
</div>
<div class="row">
  <div class="col-xs-12 text-center">
    <%= will_paginate @articles, :renderer => BootstrapPagination::Rails %>
  </div>
</div>
