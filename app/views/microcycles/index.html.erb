<div class="row">
  <div class="col-xs-12">
    <h1>Microcycles</h1>
    <p>These are generally blocks about a week long and can contain any combination of workouts.</p>
  </div>
</div>
<div class="row">
  <div class="col-xs-8">
    <%= form_tag("/microcycles", method: "get", remote: true, class: "form-inline margin_top" ) do %>
      <strong>Filter by:</strong>
      <div class="form-group margin_left">
        <%= select_tag(:microcycle_type, options_for_select([['Type', ''], ['Strength', 'strength'], ['Power', 'power'], ['Power Endurance', 'powerendurance'], ['Endurance', 'endurance'], ['Technique', 'technique'], ['Cardio', 'cardio']]), class: "form-control") %>
      </div>
      <%= submit_tag("Filter", class: "btn btn-default margin_left") %>
    <% end %>
  </div>
  <div class="col-xs-4 text-right">
    <%= link_to raw("<span class='glyphicon glyphicon-plus'></span> Add Microcycle"), new_microcycle_path, remote: true, class: "btn btn-success btn-lg" %>
  </div>
</div>

<div class="microcycle_list margin_top">
  <%= render "index" %>
</div>

<!-- Modal -->
<div class="modal fade" id="microcycle_modal" tabindex="-1" role="dialog" aria-labelledby="microcycleModal">

</div>
