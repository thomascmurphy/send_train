$("ul.errors").html("")
<% if @microcycle.errors.any? %>
  <% @microcycle.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".microcycle_list").html("<%= escape_javascript(render 'index') %>")
  $("#microcycle_modal").modal("hide")
<% end %>
