<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3>Delete Climb</h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @climb.name %></b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes, Delete This Climb", climb_path(@climb, sort_by: sort_by, sort_direction: sort_direction, page: page, per_page: per_page), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>
