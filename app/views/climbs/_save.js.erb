$("ul.errors").html("")
<% if @climb.errors.any? %>
  <% @climb.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".climb_list").html("<%= escape_javascript(render 'index') %>")
  $("#climb_modal").modal("hide")
<% end %>
