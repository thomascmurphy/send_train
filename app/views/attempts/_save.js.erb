$("ul.errors").html("")
<% if @attempt.present? && @attempt.errors.any? %>
  <% @attempt.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".climb_list").html("<%= escape_javascript(render 'climbs/index') %>")
  $("#climb_modal").html("<%= escape_javascript(render 'climbs/edit') %>")
<% end %>
