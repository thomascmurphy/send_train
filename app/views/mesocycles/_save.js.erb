$("ul.errors").html("")
<% if @mesocycle.errors.any? %>
  <% @mesocycle.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".mesocycle_list").html("<%= escape_javascript(render 'index') %>")
  $("#mesocycle_modal").modal("hide")
<% end %>
