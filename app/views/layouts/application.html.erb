  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header_area">
    <div class="container">
      <div class="row">
        <div class="col-xs-5 col-md-4">
          <a href="/" class="white" id="home_link">
            <!-- <%= image_tag("lolevation_logo.png", id: "logo", class: "valign_middle") %> -->
            <h1 id="site_title" class="inline_block valign_middle alt_font">Send Train</h1>
          </a>
        </div>
        <div class="col-xs-7 col-md-8">
          <nav class="navbar navbar-default">
            <div class="container-fluid">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                  <% if user_signed_in? %>
                    <li class="<% if current_page?(url_for controller: '/profile', action: 'show') %>active<% end %>">
                      <a href="<%= url_for controller: '/profile', action: 'show' %>">
                        Profile
                        <% if current_page?(url_for controller: '/profile', action: 'show') %> <span class="sr-only">(current)</span><% end %>
                      </a>
                    </li>

                    <li class="<% if current_page?(url_for controller: '/climbs', action: 'index') %>active<% end %>">
                      <a href="<%= url_for controller: '/climbs', action: 'index' %>">
                        Climbs
                        <% if current_page?(url_for controller: '/climbs', action: 'index') %> <span class="sr-only">(current)</span><% end %>
                      </a>
                    </li>

                    <li class="dropdown <% if current_page?(url_for controller: '/workouts', action: 'index') || current_page?(url_for controller: '/microcycles', action: 'index') || current_page?(url_for controller: '/mesocycles', action: 'index') || current_page?(url_for controller: '/macrocycles', action: 'index') %>active<% end %>">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        Plans <span class="caret"></span>
                        <% if current_page?(url_for controller: '/workouts', action: 'index') || current_page?(url_for controller: '/microcycles', action: 'index') || current_page?(url_for controller: '/mesocycles', action: 'index') || current_page?(url_for controller: '/macrocycles', action: 'index') %> <span class="sr-only">(current)</span><% end %>
                      </a>
                      <ul class="dropdown-menu">
                        <li><a href="<%= url_for controller: '/workouts', action: 'index' %>">Workouts</a></li>
                        <li><a href="<%= url_for controller: '/microcycles', action: 'index' %>">Microcycles</a></li>
                        <li><a href="<%= url_for controller: '/mesocycles', action: 'index' %>">Mesocycles</a></li>
                        <li><a href="<%= url_for controller: '/macrocycles', action: 'index' %>">Macrocycles</a></li>
                      </ul>
                    </li>

                    <li class="<% if current_page?(url_for controller: '/events', action: 'index') %>active<% end %>">
                      <a href="<%= url_for controller: '/events', action: 'index' %>">
                        Schedule
                        <% if current_page?(url_for controller: '/events', action: 'index') %> <span class="sr-only">(current)</span><% end %>
                      </a>
                    </li>

                  <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle no_bg" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><%= link_to('Edit Profile', edit_user_registration_path, class: "no_bg") %></li>
                        <li role="separator" class="divider"></li>
                        <li><%= link_to('Logout', destroy_user_session_path, method: :delete, class: "no_bg") %></li>
                      </ul>
                    </li>
                  <% else %>
                    <li><%= link_to('Login', new_user_session_path) %></li>
                  <% end %>
                </ul>
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div id="notice_area">
    <div class="alert alert-info<% unless notice %> hidden<% end %>" id="notice_container" role="alert">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <span id="notice_content"><%= notice %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="alert alert-danger<% unless alert %> hidden<% end %>" id="alert_container" role="alert">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <span id="alert_content"><%= alert %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="content_area">
    <div class="container<% if @wide_content %>-fluid<% end %>">
      <div class="row">
        <div class="col-xs-12">

          <%= yield %>

        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="comment_modal" tabindex="-1" role="dialog" aria-labelledby="commentModal">

  </div>

</body>
</html>
