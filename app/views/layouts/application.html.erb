  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <div id="header_area">
      <div class="container">
        <div class="row">
          <div class="col-xs-5 col-md-4">
            <a href="/" class="white" id="home_link">
              <!-- <%= image_tag("lolevation_logo.png", id: "logo", class: "valign_middle") %> -->
              <h1 id="site_title" class="inline_block valign_middle alt_font"><em>Plan/Train/Climb</em></h1>
            </a>
          </div>
          <div class="col-xs-7 col-md-8">
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-collapse">
                  <ul class="nav navbar-nav">
                    <% if user_signed_in? %>
                      <li class="<% if current_page?(url_for controller: '/profile', action: 'show') || current_page?(url_for controller: '/profile', action: 'progress') %>active<% end %>">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                          Profile <span class="caret"></span>
                          <% if current_page?(url_for controller: '/profile', action: 'show') || current_page?(url_for controller: '/profile', action: 'progress') %> <span class="sr-only">(current)</span><% end %>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a href="<%= url_for controller: '/profile', action: 'show' %>">Dashboard</a></li>
                          <li><a href="<%= url_for controller: '/profile', action: 'progress' %>">Progress</a></li>
                        </ul>
                      </li>

                      <li class="<% if current_page?(url_for controller: '/climbs', action: 'index') %>active<% end %>">
                        <a href="<%= url_for controller: '/climbs', action: 'index' %>">
                          Climbs
                          <% if current_page?(url_for controller: '/climbs', action: 'index') %> <span class="sr-only">(current)</span><% end %>
                        </a>
                      </li>

                      <li class="dropdown <% if current_page?(url_for controller: '/exercises', action: 'index') || current_page?(url_for controller: '/workouts', action: 'index') || current_page?(url_for controller: '/macrocycles', action: 'index') %>active<% end %>">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                          Plans <span class="caret"></span>
                          <% if current_page?(url_for controller: '/exercises', action: 'index') || current_page?(url_for controller: '/workouts', action: 'index') || current_page?(url_for controller: '/macrocycles', action: 'index') %> <span class="sr-only">(current)</span><% end %>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a href="<%= url_for controller: '/exercises', action: 'index' %>">My Exercises</a></li>
                          <li><a href="<%= url_for controller: '/workouts', action: 'index' %>">My Workouts</a></li>
                          <li><a href="<%= url_for controller: '/macrocycles', action: 'index' %>">My Plans</a></li>
                        </ul>
                      </li>

                      <li class="<% if current_page?(url_for controller: '/events', action: 'index') %>active<% end %>">
                        <a href="<%= url_for controller: '/events', action: 'index' %>">
                          Schedule
                          <% if current_page?(url_for controller: '/events', action: 'index') %> <span class="sr-only">(current)</span><% end %>
                        </a>
                      </li>

                    <% end %>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle no_bg" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          <li><%= link_to('Edit Profile', {controller: '/profile', action: 'edit'}, class: "no_bg") %></li>
                          <li><%= link_to('Edit Password/Email', edit_user_registration_path, class: "no_bg") %></li>
                          <li role="separator" class="divider"></li>
                          <li><%= link_to('Logout', destroy_user_session_path, method: :delete, class: "no_bg") %></li>
                          <% if true_user.is_admin? %>
                            <li role="separator" class="divider"></li>
                            <% if current_user != true_user %>
                              <li><%= link_to "Switch Back", stop_impersonating_path %></li>
                            <% else %>
                              <li><%= link_to "Users", users_path %></li>
                            <% end %>
                          <% end %>
                        </ul>
                      </li>
                    <% else %>
                      <li><%= link_to('Login / Signup', new_user_session_path) %></li>
                    <% end %>
                  </ul>
                </div><!-- /.navbar-collapse -->
              </div><!-- /.container-fluid -->
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div id="notice_area">
      <div class="alert alert-info<% unless notice %> hidden<% end %>" id="notice_container" role="alert">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <span id="notice_content"><%= notice %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="alert alert-danger<% unless alert %> hidden<% end %>" id="alert_container" role="alert">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <span id="alert_content"><%= alert %></span>
            </div>
          </div>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="alert alert-success<% unless current_user.onboarding_message %> hidden<% end %>" id="onboarding_container" role="alert">
          <div class="container">
            <div class="row">
              <div class="col-xs-12">
                <%= current_user.onboarding_message %> &nbsp;&nbsp;&nbsp;
                <% if current_user.onboarding_step < 6 %>
                  <%= link_to('Take me there!', onboarding_path) %> &nbsp;&nbsp;&nbsp;
                  <%= link_to('Skip this one.', onboarding_skip_path, remote: true) %>
                <% else %>
                  <%= link_to('Ok, ok, just let me use it!', onboarding_skip_path, remote: true) %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div id="content_area">
      <div class="container<% if @wide_content %>-fluid<% end %>">
        <div class="row">
          <div class="col-xs-12">

            <%= yield %>

          </div>
        </div>
      </div>
    </div>
    <div id="footer_push"></div>
  </div>

  <div id="site_footer" class="text-right">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%= link_to('Privacy Policy', {controller: '/home', action: 'privacy_policy'}, class: "no_bg") %>|
          <%= link_to('Terms of Service', {controller: '/home', action: 'terms_of_service'}, class: "no_bg") %>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="comment_modal" tabindex="-1" role="dialog" aria-labelledby="commentModal">

  </div>

</body>
</html>
