$("ul.errors").html("")
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".calendar").html("<%= escape_javascript(render 'calendar') %>");
  $(".current_events").html("<%= escape_javascript(render 'current_events') %>");
  $(".upcoming_events").html("<%= escape_javascript(render 'upcoming_events') %>");
  $(".past_events").html("<%= escape_javascript(render 'past_events') %>");
  $("#event_modal").modal("hide");
<% end %>
