$("ul.errors").html("")
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".event_list").html("<%= escape_javascript(render 'index') %>")
  $("#event_modal").modal("hide")
<% end %>
