<%= form_for(@message, remote: true) do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    <%= hidden_field_tag "message[parent_message_id]", @message.parent_message_id %>
    <%= hidden_field_tag "primary_message_id", @primary_message_id %>
    <%= hidden_field_tag "message[messageable_id]", @message.messageable_id %>
    <%= hidden_field_tag "message[messageable_type]", @message.messageable_type %>
    <% unless @message.parent_message_id.present? || @message.messageable_id.present? %>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.label :body %><br>
          <%= f.text_area :body, class: "form-control", size: "60x3" %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" value="Save">
  </div>
<% end %>
