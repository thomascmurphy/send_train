$("ul.errors").html("")
<% if @workout.errors.any? %>
  <% @workout.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".workout_list").html("<%= escape_javascript(render 'index') %>")
  $("#workout_modal").modal("hide")
<% end %>
