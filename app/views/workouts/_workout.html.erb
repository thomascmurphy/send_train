<div class="col-md-4 col-sm-6 margin_bottom">
  <div class="panel<%= workout.panel_class %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= workout.label %></h3>
    </div>
    <div class="panel-body">
      <%= simple_format(truncate(workout.description, length: 50, separator: ' ')) %>
    </div>
    <div class="panel-footer text-right">
      <% if current_user.students.present? %>
        <%= link_to "Assign", workout_assign_path(workout), remote: true, class: "btn btn-sm btn-default" %>
      <% end %>
      <%= link_to "Duplicate", workout_duplicate_path(workout), remote: true, class: "btn btn-sm btn-success" %>
      <%= link_to "Edit", edit_workout_path(workout), class: "btn btn-sm btn-info" %>
      <%= link_to "Share", new_item_share_path(item_type: "Workout", item_id: workout.id), remote: true, class: "btn btn-sm btn-warning" %>
      <%= link_to "Delete", workout_delete_path(workout), remote: true, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>
