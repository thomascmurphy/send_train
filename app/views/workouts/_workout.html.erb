<div class="col-lg-3 col-md-4 col-sm-6">
  <div class="panel<%= workout.panel_class %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= workout.label %></h3>
    </div>
    <div class="panel-body">
      <%= truncate(workout.description, length: 50, separator: ' ') %>
    </div>
    <div class="panel-footer">
      <%= link_to "Edit", edit_workout_path(workout), remote: true, class: "btn btn-info" %>
      <%= link_to "Delete", workout_delete_path(workout), remote: true, class: "btn btn-danger" %>
    </div>
  </div>
</div>
