<div class="col-md-3 col-sm-6 margin_bottom">
  <div class="panel<%= workout.panel_class %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= workout.label %></h3>
    </div>
    <div class="panel-body">
      <%= simple_format(truncate(workout.description, length: 50, separator: ' ')) %>
    </div>
    <div class="panel-footer">
      <%= link_to "Edit", edit_workout_path(workout), class: "btn btn-info" %>
      <%= link_to "Delete", workout_delete_path(workout), remote: true, class: "btn btn-danger" %>
    </div>
  </div>
</div>
