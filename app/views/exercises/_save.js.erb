$("ul.errors").html("")
<% if @exercise.errors.any? %>
  <% @exercise.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".exercise_list").html("<%= escape_javascript(render 'index') %>")
  $("#exercise_modal").modal("hide")
<% end %>
