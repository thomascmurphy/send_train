$("ul.errors").html("")
<% if @macrocycle.errors.any? %>
  <% @macrocycle.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".macrocycle_list").html("<%= escape_javascript(render 'index') %>")
  $("#macrocycle_modal").modal("hide")
<% end %>
