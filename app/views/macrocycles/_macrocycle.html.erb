<div class="col-md-3 col-sm-6 margin_bottom">
  <div class="panel<%= macrocycle.panel_class %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= macrocycle.label %></h3>
    </div>
    <div class="panel-body">
      <% if macrocycle.mesocycles.present? %>
        <ul>
          <% macrocycle.mesocycles.each do |mesocycle| %>
            <li>
              <%= mesocycle.label %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to "Edit", edit_macrocycle_path(macrocycle), remote: true, class: "btn btn-info" %>
      <%= link_to "Delete", macrocycle_delete_path(macrocycle), remote: true, class: "btn btn-danger" %>
    </div>
  </div>
</div>
