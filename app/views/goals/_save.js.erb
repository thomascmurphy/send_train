$("ul.errors").html("")
<% if @goal.errors.any? %>
  <% @goal.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".goal_list").html("<%= escape_javascript(render 'index') %>")
  $("#goal_modal").modal("hide")
<% end %>
