<div class="row large_margin_bottom">
  <div class="col-xs-12">
    <h1>Send Comment</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= form_tag("comment", method: :post) do %>
      <ul class="errors"></ul>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= label_tag :subject, "Subject" %><br>
            <%= text_field_tag :subject, nil, class: "form-control" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= label_tag :from_email, "Return Email" %><br>
            <%= text_field_tag :from_email, nil, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <%= label_tag :comment, "Comment" %><br>
            <%= text_area_tag :comment, nil, class: "form-control", size: "60x12" %>
          </div>
        </div>
      </div>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <input type="submit" class="btn btn-primary" value="Send">
    <% end %>
  </div>
</div>
